#cloud-config

output: {all: '| tee -a /var/log/cloud-init.log'}   # store logs inside vm

timezone: "America/Chicago"

hostname: ubuntu

package_update: true
package_upgrade: true

packages:
{% for package in packages | default(['curl', 'git', 'openssh-server', 'qemu-guest-agent', 'wget']) %}
  - {{ package }}
{% endfor %}

{% if dns_servers %}
manage_resolv_conf: true
resolv_conf:
  nameservers:
{% for dns in dns_servers %}
    - {{ dns }}
{% endfor %}
{% endif %}

users:
  - name: {{ username | default('admin') }}
    groups: {{ groups | default(['sudo']) | join(', ') }}
    shell: /bin/bash
    sudo: ALL=(ALL) NOPASSWD:ALL
    lock_passwd: false
    {{ ssh_keys_section }}

ssh_pwauth: true

chpasswd:
  list: |
    {{ username | default('admin') }}:{{ password | default('ubuntu') }}
  expire: false

runcmd:
  - systemctl enable --now qemu-guest-agent.service
  - mkdir -p /home/{{ username | default('admin') }}/.ssh
  - chmod 700 /home/{{ username | default('admin') }}/.ssh
  {% if github_ssh_user %}
  - wget -O - https://github.com/{{ github_ssh_user }}.keys | sudo tee -a /home/{{ username | default('admin') }}/.ssh/authorized_keys
  {% endif %}
  - chmod 600 /home/{{ username | default('admin') }}/.ssh/authorized_keys
  - chown -R {{ username | default('admin') }}:{{ username | default('admin') }} /home/{{ username | default('admin') }}/.ssh

final_message: "VM setup complete with ansible installed after $UPTIME seconds."
